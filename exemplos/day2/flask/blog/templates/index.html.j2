{% extends "base.html.j2" %}

{% block content %}
<style>
.new-button a {
        text-decoration: none;
        color: #e0e0e0;
        background-color: #333;
        padding: 10px 15px;
        border-radius: 5px;
        border: 1px solid #444;
        transition: background 0.3s;
    }

.new-button a:hover {
        background-color: #555;
    }
</style>

<div class="container">
<h1 style="color: azure;">{{config.get('TITLE')}}</h1>

<div class="jumbotron">
<ul class="list-group">
    {% for post in posts %}
    <li class="list-group-item">
        <a href="{{url_for('post.detail', slug=post.slug)}}">{{post.title | title}}</a>
    </li>
    {% endfor %}
</ul>
    <div class="new-button">
        <a href="/new">Criar Novo Post</a>
    </div>
</div>

</div>
{% endblock %}
